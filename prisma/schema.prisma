generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  @@map("user")
}

model ClienteHub {
  id       String  @id @default(uuid())
  cliente  String
  banco    String
  usuario  String
  senha    String
  endereco String
  porta    String
  status   Boolean

  @@map("clientehub")
}

model ClientBling {
  id           String @id @default(uuid())
  clientId     String
  cliente      String
  clientSecret String
  blingToken   String
  refreshToken String
  apiUrl       String

  @@map("clientbling")
}
